<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

  <item>
    <shape android:shape="rectangle">
      <solid android:color="@color/simple_dark_blue_800" />
    </shape>
  </item>

  <!--
  Top and bottom spacing is applied so that the image doesn't
  look stretched on devices with API < 23.
  -->
  <item
    android:bottom="150dp"
    android:drawable="@drawable/ic_splash_logo"
    android:gravity="center"
    android:top="150dp" />

</layer-list>
